{
  "name": "@clawfi/node",
  "version": "0.1.0",
  "private": true,
  "description": "ClawFi Node - Fastify API + WebSocket + Scheduler",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "node build.mjs",
    "build:typecheck": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "tsx src/db/seed.ts"
  },
  "dependencies": {
    "@clawfi/core": "workspace:*",
    "@clawfi/connectors": "workspace:*",
    "@clawfi/vault": "workspace:*",
    "@fastify/cors": "^9.0.1",
    "@fastify/jwt": "^8.0.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/websocket": "^10.0.1",
    "@prisma/client": "^5.8.0",
    "argon2": "^0.31.2",
    "bullmq": "^5.1.0",
    "fastify": "^4.25.2",
    "ioredis": "^5.3.2",
    "viem": "^2.45.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "esbuild": "^0.21.5",
    "glob": "^10.3.10",
    "prisma": "^5.8.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}


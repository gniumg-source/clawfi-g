---
import { url } from '../lib/data.js';
import { NAV_ITEMS } from './constants.js';

const currentPath = Astro.url.pathname;
---

<aside
	id="sidebar"
	class="fixed top-0 left-0 z-20 flex flex-col flex-shrink-0 hidden w-64 h-full pt-16 font-normal duration-75 lg:flex transition-width"
	aria-label="Sidebar"
>
	<div
		class="relative flex flex-col flex-1 min-h-0 pt-0 bg-gray-900 border-r border-gray-800"
	>
		<div
			class:list={[
				'flex flex-col flex-1 pt-5 pb-28 overflow-y-auto',
				'scrollbar scrollbar-w-2 scrollbar-thumb-rounded-[0.1667rem]',
				'scrollbar-thumb-gray-700 scrollbar-track-gray-800',
			]}
		>
			<div class="flex-1 px-3 space-y-1 bg-gray-900 divide-y divide-gray-800">
				<ul class="pb-2 space-y-2">
					<li>
						<form action="#" method="GET" class="lg:hidden">
							<label for="mobile-search" class="sr-only">Search</label>
							<div class="relative">
								<div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
									<svg class="w-5 h-5 text-gray-500" fill="currentColor" viewBox="0 0 20 20">
										<path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"></path>
									</svg>
								</div>
								<input
									type="text"
									id="mobile-search"
									class="bg-gray-800 border border-gray-700 text-gray-200 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full pl-10 p-2.5"
									placeholder="Search"
								/>
							</div>
						</form>
					</li>
					
					<!-- Dashboard -->
					<li>
						<a
							href={url('')}
							class:list={[
								'flex items-center p-2 text-base rounded-lg group transition-all',
								currentPath === '/' || currentPath === '/index.html'
									? 'bg-primary-900/50 text-primary-400'
									: 'text-gray-300 hover:bg-gray-800 hover:text-white'
							]}
						>
							<svg class="w-6 h-6 transition duration-75" fill="currentColor" viewBox="0 0 20 20">
								<path d="M2 10a8 8 0 018-8v8h8a8 8 0 11-16 0z"></path>
								<path d="M12 2.252A8.014 8.014 0 0117.748 8H12V2.252z"></path>
							</svg>
							<span class="ml-3">Dashboard</span>
						</a>
					</li>
					
					<!-- Agent -->
					<li>
						<a
							href={url('agent')}
							class:list={[
								'flex items-center p-2 text-base rounded-lg group transition-all',
								currentPath.includes('/agent')
									? 'bg-primary-900/50 text-primary-400'
									: 'text-gray-300 hover:bg-gray-800 hover:text-white'
							]}
						>
							<svg class="w-6 h-6 transition duration-75" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M2 5a2 2 0 012-2h12a2 2 0 012 2v10a2 2 0 01-2 2H4a2 2 0 01-2-2V5zm3.293 1.293a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 01-1.414-1.414L7.586 10 5.293 7.707a1 1 0 010-1.414zM11 12a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd"></path>
							</svg>
							<span class="ml-3">Agent</span>
							<span class="ml-auto px-2 py-0.5 text-xs font-medium bg-primary-600 text-white rounded-full">New</span>
						</a>
					</li>
					
					<!-- Connections -->
					<li>
						<a
							href={url('connections')}
							class:list={[
								'flex items-center p-2 text-base rounded-lg group transition-all',
								currentPath.includes('/connections')
									? 'bg-primary-900/50 text-primary-400'
									: 'text-gray-300 hover:bg-gray-800 hover:text-white'
							]}
						>
							<svg class="w-6 h-6 transition duration-75" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd"></path>
							</svg>
							<span class="ml-3">Connections</span>
						</a>
					</li>
					
					<!-- Signals -->
					<li>
						<a
							href={url('signals')}
							class:list={[
								'flex items-center p-2 text-base rounded-lg group transition-all',
								currentPath.includes('/signals')
									? 'bg-primary-900/50 text-primary-400'
									: 'text-gray-300 hover:bg-gray-800 hover:text-white'
							]}
						>
							<svg class="w-6 h-6 transition duration-75" fill="currentColor" viewBox="0 0 20 20">
								<path d="M10 2a6 6 0 00-6 6v3.586l-.707.707A1 1 0 004 14h12a1 1 0 00.707-1.707L16 11.586V8a6 6 0 00-6-6zM10 18a3 3 0 01-3-3h6a3 3 0 01-3 3z"></path>
							</svg>
							<span class="ml-3">Signals</span>
						</a>
					</li>
					
					<!-- Launchpads -->
					<li>
						<a
							href={url('launchpads')}
							class:list={[
								'flex items-center p-2 text-base rounded-lg group transition-all',
								currentPath.includes('/launchpads')
									? 'bg-primary-900/50 text-primary-400'
									: 'text-gray-300 hover:bg-gray-800 hover:text-white'
							]}
						>
							<svg class="w-6 h-6 transition duration-75" fill="currentColor" viewBox="0 0 20 20">
								<path d="M10.894 2.553a1 1 0 00-1.788 0l-7 14a1 1 0 001.169 1.409l5-1.429A1 1 0 009 15.571V11a1 1 0 112 0v4.571a1 1 0 00.725.962l5 1.428a1 1 0 001.17-1.408l-7-14z"></path>
							</svg>
							<span class="ml-3">Launchpads</span>
						</a>
					</li>
					
					<!-- Strategies -->
					<li>
						<a
							href={url('strategies')}
							class:list={[
								'flex items-center p-2 text-base rounded-lg group transition-all',
								currentPath.includes('/strategies')
									? 'bg-primary-900/50 text-primary-400'
									: 'text-gray-300 hover:bg-gray-800 hover:text-white'
							]}
						>
							<svg class="w-6 h-6 transition duration-75" fill="currentColor" viewBox="0 0 20 20">
								<path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z"></path>
							</svg>
							<span class="ml-3">Strategies</span>
						</a>
					</li>
					
					<!-- Risk -->
					<li>
						<a
							href={url('risk')}
							class:list={[
								'flex items-center p-2 text-base rounded-lg group transition-all',
								currentPath.includes('/risk')
									? 'bg-primary-900/50 text-primary-400'
									: 'text-gray-300 hover:bg-gray-800 hover:text-white'
							]}
						>
							<svg class="w-6 h-6 transition duration-75" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
							</svg>
							<span class="ml-3">Risk</span>
						</a>
					</li>
					
					<!-- Audit Log -->
					<li>
						<a
							href={url('audit')}
							class:list={[
								'flex items-center p-2 text-base rounded-lg group transition-all',
								currentPath.includes('/audit')
									? 'bg-primary-900/50 text-primary-400'
									: 'text-gray-300 hover:bg-gray-800 hover:text-white'
							]}
						>
							<svg class="w-6 h-6 transition duration-75" fill="currentColor" viewBox="0 0 20 20">
								<path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"></path>
								<path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd"></path>
							</svg>
							<span class="ml-3">Audit Log</span>
						</a>
					</li>
				</ul>
				
				<div class="pt-2 space-y-2">
					<!-- Settings -->
					<a
						href={url('settings')}
						class:list={[
							'flex items-center p-2 text-base rounded-lg group transition-all',
							currentPath.includes('/settings')
								? 'bg-primary-900/50 text-primary-400'
								: 'text-gray-300 hover:bg-gray-800 hover:text-white'
						]}
					>
						<svg class="w-6 h-6 transition duration-75" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd"></path>
						</svg>
						<span class="ml-3">Settings</span>
					</a>
					
					<!-- Documentation -->
					<a
						href="https://github.com/clawfi/clawfi"
						target="_blank"
						class="flex items-center p-2 text-base text-gray-300 transition duration-75 rounded-lg hover:bg-gray-800 hover:text-white group"
					>
						<svg class="w-6 h-6 transition duration-75" fill="currentColor" viewBox="0 0 20 20">
							<path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z"></path>
						</svg>
						<span class="ml-3">Documentation</span>
					</a>
				</div>
			</div>
		</div>
		
		<!-- Bottom Status -->
		<div class="absolute bottom-0 left-0 w-full p-4 space-y-2 bg-gray-900 border-t border-gray-800">
			<div id="sidebar-status" class="flex items-center justify-between text-xs">
				<span class="text-gray-500">System Status</span>
				<span class="flex items-center text-emerald-400">
					<span class="w-2 h-2 mr-1 bg-emerald-400 rounded-full animate-pulse"></span>
					Online
				</span>
			</div>
			<div class="text-xs text-gray-600">
				ClawFi v0.1.0
			</div>
		</div>
	</div>
</aside>

<div class="fixed inset-0 z-10 hidden bg-gray-900/90" id="sidebarBackdrop"></div>

<script>
	const sidebar = document.getElementById('sidebar');

	if (sidebar) {
		const toggleSidebarMobile = (
			sidebar: HTMLElement,
			sidebarBackdrop: HTMLElement,
			toggleSidebarMobileHamburger: HTMLElement,
			toggleSidebarMobileClose: HTMLElement,
		) => {
			sidebar.classList.toggle('hidden');
			sidebarBackdrop.classList.toggle('hidden');
			toggleSidebarMobileHamburger.classList.toggle('hidden');
			toggleSidebarMobileClose.classList.toggle('hidden');
		};

		const toggleSidebarMobileEl = document.getElementById('toggleSidebarMobile');
		const sidebarBackdrop = document.getElementById('sidebarBackdrop')!;
		const toggleSidebarMobileHamburger = document.getElementById('toggleSidebarMobileHamburger')!;
		const toggleSidebarMobileClose = document.getElementById('toggleSidebarMobileClose')!;
		const toggleSidebarMobileSearch = document.getElementById('toggleSidebarMobileSearch')!;

		toggleSidebarMobileSearch?.addEventListener('click', () => {
			toggleSidebarMobile(sidebar, sidebarBackdrop, toggleSidebarMobileHamburger, toggleSidebarMobileClose);
		});

		toggleSidebarMobileEl?.addEventListener('click', () => {
			toggleSidebarMobile(sidebar, sidebarBackdrop, toggleSidebarMobileHamburger, toggleSidebarMobileClose);
		});

		sidebarBackdrop?.addEventListener('click', () => {
			toggleSidebarMobile(sidebar, sidebarBackdrop, toggleSidebarMobileHamburger, toggleSidebarMobileClose);
		});
	}
</script>

---
import { url } from '../lib/data.js';

const currentPath = Astro.url.pathname;

const navItems = [
	{ href: '', label: 'Dashboard', icon: 'dashboard' },
	{ href: 'gems', label: 'ClawF Agent', icon: 'gem', badge: 'AI' },
	{ href: 'market', label: 'Market', icon: 'chart', badge: 'Live' },
	{ href: 'trending', label: 'Trending', icon: 'fire' },
	{ href: 'watchlist', label: 'Watchlist', icon: 'star' },
	{ href: 'launchpads', label: 'Launchpads', icon: 'rocket' },
	{ href: 'alerts', label: 'Alerts', icon: 'bell' },
	{ href: 'signals', label: 'Signals', icon: 'signal' },
	{ href: 'agent', label: 'Agent', icon: 'terminal' },
	{ href: 'connections', label: 'Connections', icon: 'bolt' },
	{ href: 'strategies', label: 'Strategies', icon: 'book' },
	{ href: 'risk', label: 'Risk', icon: 'shield' },
	{ href: 'audit', label: 'Audit Log', icon: 'clipboard' },
];

const bottomItems = [
	{ href: 'settings', label: 'Settings', icon: 'cog' },
];

function isActive(href: string) {
	if (href === '') return currentPath === '/' || currentPath === '/index.html';
	return currentPath.includes('/' + href);
}
---

<aside
	id="sidebar"
	class="fixed top-0 left-0 z-20 flex-col flex-shrink-0 hidden w-72 h-full pt-16 lg:flex transition-all duration-300"
	aria-label="Sidebar"
>
	<div class="relative flex flex-col flex-1 min-h-0 glass-sidebar">
		<div class="flex flex-col flex-1 pt-6 pb-28 overflow-y-auto px-4">
			<!-- Navigation -->
			<nav class="flex-1 space-y-1">
				{navItems.map((item) => (
					<a
						href={url(item.href)}
						class:list={[
							'nav-item-glass',
							isActive(item.href) && 'active'
						]}
					>
						<span class="w-5 h-5 opacity-80">
							{item.icon === 'dashboard' && (
								<svg fill="currentColor" viewBox="0 0 20 20"><path d="M2 10a8 8 0 018-8v8h8a8 8 0 11-16 0z"/><path d="M12 2.252A8.014 8.014 0 0117.748 8H12V2.252z"/></svg>
							)}
							{item.icon === 'gem' && (
								<svg fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M5 2a2 2 0 00-2 2v14l3.5-2 3.5 2 3.5-2 3.5 2V4a2 2 0 00-2-2H5zm2.5 3a1.5 1.5 0 100 3 1.5 1.5 0 000-3zm6.207.293a1 1 0 00-1.414 0l-6 6a1 1 0 101.414 1.414l6-6a1 1 0 000-1.414zm-2.207 2.207a1.5 1.5 0 100 3 1.5 1.5 0 000-3z" clip-rule="evenodd"/></svg>
							)}
							{item.icon === 'terminal' && (
								<svg fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M2 5a2 2 0 012-2h12a2 2 0 012 2v10a2 2 0 01-2 2H4a2 2 0 01-2-2V5zm3.293 1.293a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 01-1.414-1.414L7.586 10 5.293 7.707a1 1 0 010-1.414zM11 12a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd"/></svg>
							)}
							{item.icon === 'bolt' && (
								<svg fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd"/></svg>
							)}
							{item.icon === 'bell' && (
								<svg fill="currentColor" viewBox="0 0 20 20"><path d="M10 2a6 6 0 00-6 6v3.586l-.707.707A1 1 0 004 14h12a1 1 0 00.707-1.707L16 11.586V8a6 6 0 00-6-6zM10 18a3 3 0 01-3-3h6a3 3 0 01-3 3z"/></svg>
							)}
							{item.icon === 'rocket' && (
								<svg fill="currentColor" viewBox="0 0 20 20"><path d="M10.894 2.553a1 1 0 00-1.788 0l-7 14a1 1 0 001.169 1.409l5-1.429A1 1 0 009 15.571V11a1 1 0 112 0v4.571a1 1 0 00.725.962l5 1.428a1 1 0 001.17-1.408l-7-14z"/></svg>
							)}
							{item.icon === 'book' && (
								<svg fill="currentColor" viewBox="0 0 20 20"><path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z"/></svg>
							)}
							{item.icon === 'shield' && (
								<svg fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
							)}
							{item.icon === 'clipboard' && (
								<svg fill="currentColor" viewBox="0 0 20 20"><path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"/><path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd"/></svg>
							)}
							{item.icon === 'chart' && (
								<svg fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M3 3a1 1 0 000 2v8a2 2 0 002 2h2.586l-1.293 1.293a1 1 0 101.414 1.414L10 15.414l2.293 2.293a1 1 0 001.414-1.414L12.414 15H15a2 2 0 002-2V5a1 1 0 100-2H3zm11.707 4.707a1 1 0 00-1.414-1.414L10 9.586 8.707 8.293a1 1 0 00-1.414 0l-2 2a1 1 0 101.414 1.414L8 10.414l1.293 1.293a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/></svg>
							)}
							{item.icon === 'fire' && (
								<svg fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z" clip-rule="evenodd"/></svg>
							)}
							{item.icon === 'star' && (
								<svg fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
							)}
							{item.icon === 'signal' && (
								<svg fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M5.05 3.636a1 1 0 010 1.414 7 7 0 000 9.9 1 1 0 11-1.414 1.414 9 9 0 010-12.728 1 1 0 011.414 0zm9.9 0a1 1 0 011.414 0 9 9 0 010 12.728 1 1 0 11-1.414-1.414 7 7 0 000-9.9 1 1 0 010-1.414zM7.879 6.464a1 1 0 010 1.414 3 3 0 000 4.243 1 1 0 11-1.414 1.414 5 5 0 010-7.07 1 1 0 011.414 0zm4.242 0a1 1 0 011.414 0 5 5 0 010 7.072 1 1 0 01-1.414-1.415 3 3 0 000-4.242 1 1 0 010-1.415zM10 9a1 1 0 011 1v.01a1 1 0 11-2 0V10a1 1 0 011-1z" clip-rule="evenodd"/></svg>
							)}
						</span>
						<span>{item.label}</span>
						{item.badge && (
							<span class="ml-auto badge-glass badge-glass-blue text-[10px]">{item.badge}</span>
						)}
					</a>
				))}
			</nav>
			
			<!-- Divider -->
			<div class="my-4 h-px bg-gradient-to-r from-transparent via-white/10 to-transparent"></div>
			
			<!-- Bottom items -->
			<div class="space-y-1">
				{bottomItems.map((item) => (
					<a
						href={url(item.href)}
						class:list={[
							'nav-item-glass',
							isActive(item.href) && 'active'
						]}
					>
						<span class="w-5 h-5 opacity-80">
							{item.icon === 'cog' && (
								<svg fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd"/></svg>
							)}
						</span>
						<span>{item.label}</span>
					</a>
				))}
				
				<a
					href="https://github.com/clawfiai/clawfi"
					target="_blank"
					class="nav-item-glass"
				>
					<span class="w-5 h-5 opacity-80">
						<svg fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clip-rule="evenodd"/></svg>
					</span>
					<span>Documentation</span>
				</a>
			</div>
		</div>
		
		<!-- Bottom status - Glass pill -->
		<div class="absolute bottom-0 left-0 w-full p-4">
			<div class="glass rounded-2xl p-4">
				<div class="flex items-center justify-between text-xs mb-2">
					<span class="text-secondary">System Status</span>
					<span class="flex items-center gap-2 text-[#30D158]">
						<span class="status-dot status-dot-online"></span>
						Online
					</span>
				</div>
				<div class="text-[10px] text-tertiary font-mono">
					ClawFi v0.4.2
				</div>
			</div>
		</div>
	</div>
</aside>

<div class="fixed inset-0 z-10 hidden bg-black/50 backdrop-blur-sm" id="sidebarBackdrop"></div>

<script>
	const sidebar = document.getElementById('sidebar');
	if (sidebar) {
		const toggleSidebarMobile = (
			sidebar: HTMLElement,
			sidebarBackdrop: HTMLElement,
			toggleSidebarMobileHamburger: HTMLElement,
			toggleSidebarMobileClose: HTMLElement,
		) => {
			sidebar.classList.toggle('hidden');
			sidebarBackdrop.classList.toggle('hidden');
			toggleSidebarMobileHamburger.classList.toggle('hidden');
			toggleSidebarMobileClose.classList.toggle('hidden');
		};

		const toggleSidebarMobileEl = document.getElementById('toggleSidebarMobile');
		const sidebarBackdrop = document.getElementById('sidebarBackdrop')!;
		const toggleSidebarMobileHamburger = document.getElementById('toggleSidebarMobileHamburger')!;
		const toggleSidebarMobileClose = document.getElementById('toggleSidebarMobileClose')!;
		const toggleSidebarMobileSearch = document.getElementById('toggleSidebarMobileSearch')!;

		toggleSidebarMobileSearch?.addEventListener('click', () => {
			toggleSidebarMobile(sidebar, sidebarBackdrop, toggleSidebarMobileHamburger, toggleSidebarMobileClose);
		});
		toggleSidebarMobileEl?.addEventListener('click', () => {
			toggleSidebarMobile(sidebar, sidebarBackdrop, toggleSidebarMobileHamburger, toggleSidebarMobileClose);
		});
		sidebarBackdrop?.addEventListener('click', () => {
			toggleSidebarMobile(sidebar, sidebarBackdrop, toggleSidebarMobileHamburger, toggleSidebarMobileClose);
		});
	}
</script>

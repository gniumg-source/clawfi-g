---
import LayoutSidebar from '../app/LayoutSidebar.astro';
import LaunchpadTokens from '../components/LaunchpadTokens';
---

<LayoutSidebar>
	<div class="space-y-6">
		<div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
			<div>
				<h1 class="text-2xl font-bold text-white">Clanker Launchpad</h1>
				<p class="text-gray-400">Real-time token launches on Base via Clanker</p>
			</div>
			<div class="flex items-center gap-2">
				<span class="px-3 py-1.5 text-xs font-medium bg-blue-900/40 text-blue-400 border border-blue-700/50 rounded-full">
					Base Chain
				</span>
				<a 
					href="https://clanker.world" 
					target="_blank"
					rel="noopener noreferrer"
					class="px-3 py-1.5 text-xs font-medium bg-primary-900/40 text-primary-400 border border-primary-700/50 rounded-full hover:bg-primary-900/60 transition-colors flex items-center gap-1"
				>
					<svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
					</svg>
					Clanker
				</a>
			</div>
		</div>

		<!-- Info Banner -->
		<div class="bg-gradient-to-r from-blue-900/30 to-primary-900/30 border border-blue-700/30 rounded-xl p-4">
			<div class="flex items-start gap-3">
				<div class="flex-shrink-0 w-10 h-10 rounded-lg bg-blue-500/20 flex items-center justify-center">
					<svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
					</svg>
				</div>
				<div>
					<h3 class="text-sm font-medium text-white">Live Clanker Token Feed</h3>
					<p class="text-xs text-gray-400 mt-1">
						Showing tokens launched on <strong>Base</strong> blockchain via Clanker. 
						Data is fetched directly from the Clanker API in real-time.
					</p>
				</div>
			</div>
		</div>

		<LaunchpadTokens client:load />
	</div>
</LayoutSidebar>

<script>
	const token = localStorage.getItem('clawfi_token');
	if (!token) window.location.href = '/login';
</script>


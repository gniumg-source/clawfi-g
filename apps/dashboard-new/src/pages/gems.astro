---
import LayoutSidebar from '../app/LayoutSidebar.astro';
import GemHunter from '../components/GemHunter';
---

<LayoutSidebar>
	<div class="space-y-6">
		<!-- Header -->
		<div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
			<div>
				<h1 class="text-2xl font-bold text-white flex items-center gap-2">
					<img src="/logo-square.png" alt="ClawF" class="w-10 h-10 rounded-xl" />
					ClawF Agent
				</h1>
				<p class="text-secondary mt-1">AI agent scanning for high-potential opportunities</p>
			</div>
			<div class="flex items-center gap-2 text-sm">
				<span class="w-2 h-2 bg-emerald-500 rounded-full animate-pulse"></span>
				<span class="text-emerald-400">Agent Active</span>
			</div>
		</div>

		<!-- Agent Status -->
		<div class="card-glass p-4 bg-gradient-to-r from-purple-900/20 to-blue-900/20 border-purple-500/30">
			<div class="flex items-center justify-between">
				<div class="flex items-center gap-3">
					<div class="w-12 h-12 bg-purple-500/20 rounded-xl flex items-center justify-center">
						<span class="text-2xl">ðŸ¦€</span>
					</div>
					<div>
						<div class="font-semibold text-white">ClawF is working</div>
						<div class="text-sm text-gray-400">Continuously scanning markets for opportunities</div>
					</div>
				</div>
				<div class="text-right">
					<div class="text-xs text-gray-500">Scanning</div>
					<div class="text-purple-400 font-mono">24/7</div>
				</div>
			</div>
		</div>

		<!-- Main Agent Output -->
		<div class="card-glass overflow-hidden border-purple-500/30">
			<div class="p-6">
				<GemHunter client:load />
			</div>
		</div>

		<!-- Disclaimer -->
		<div class="card-glass p-4 border-gray-700/50">
			<p class="text-xs text-gray-500 text-center">
				ClawF is an AI agent. Signals are informational only and not financial advice. Always DYOR.
			</p>
		</div>
	</div>
</LayoutSidebar>

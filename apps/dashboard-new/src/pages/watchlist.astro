---
import LayoutSidebar from '../app/LayoutSidebar.astro';
import WatchlistManager from '../components/WatchlistManager';
---

<LayoutSidebar>
	<div class="space-y-6">
		<!-- Header -->
		<div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
			<div>
				<h1 class="text-2xl font-bold text-white flex items-center gap-2">
					<span class="text-3xl">‚≠ê</span>
					Watchlist
				</h1>
				<p class="text-secondary mt-1">
					Track your favorite tokens and monitor their performance
				</p>
			</div>
		</div>

		<!-- Info Banner -->
		<div class="card-glass p-4 bg-gradient-to-r from-yellow-500/10 to-orange-500/10 border-yellow-500/20">
			<div class="flex items-start gap-3">
				<div class="flex-shrink-0 w-10 h-10 rounded-lg bg-yellow-500/20 flex items-center justify-center">
					<span class="text-xl">üí°</span>
				</div>
				<div>
					<h3 class="text-sm font-medium text-white">Portfolio Tracking</h3>
					<p class="text-xs text-secondary mt-1">
						Add tokens to your watchlist to track their price movements. Entry prices are automatically recorded 
						when you add a token, so you can see your PnL over time.
					</p>
				</div>
			</div>
		</div>

		<!-- Watchlist Component -->
		<WatchlistManager client:load />
	</div>
</LayoutSidebar>

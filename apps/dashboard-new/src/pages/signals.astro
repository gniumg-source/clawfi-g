---
import LayoutSidebar from '../app/LayoutSidebar.astro';
import ClawFSignals from '../components/ClawFSignals';
---

<LayoutSidebar>
	<div class="space-y-6">
		<!-- Hero Banner -->
		<div class="bg-gradient-to-r from-primary-900/50 to-purple-900/50 rounded-2xl border border-primary-700/30 p-6">
			<div class="flex items-center gap-4">
				<img src="/logo-square.png" alt="ClawFi" class="w-14 h-14 rounded-xl" />
				<div>
					<h1 class="text-2xl font-bold text-white">ClawF Pre-Pump Signals</h1>
					<p class="text-gray-300">Tokens about to pump in the next 4 hours</p>
				</div>
			</div>
			<div class="mt-4 flex flex-wrap gap-4 text-sm">
				<div class="flex items-center gap-2 text-gray-300">
					<span class="w-2 h-2 bg-emerald-500 rounded-full animate-pulse"></span>
					Scanning for accumulation patterns
				</div>
				<div class="text-gray-400">
					Detecting: Accumulation • Whale loading • Fresh buyers • Early momentum • Micro caps
				</div>
			</div>
		</div>

		<!-- ClawF Signals -->
		<ClawFSignals client:load />
	</div>
</LayoutSidebar>




---
import LayoutSidebar from '../app/LayoutSidebar.astro';
import AuditLogList from '../components/AuditLogList';
---

<LayoutSidebar>
	<div class="space-y-6">
		<div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
			<div>
				<h1 class="text-2xl font-bold text-white">Audit Log</h1>
				<p class="text-gray-400">Track all system activity</p>
			</div>
			<div class="flex items-center gap-3">
				<select
					id="filter-action"
					class="px-3 py-2 text-sm bg-gray-800 border border-gray-700 rounded-lg text-gray-300"
				>
					<option value="">All Actions</option>
					<option value="user_login">Login</option>
					<option value="connector_added">Connector Added</option>
					<option value="strategy_enabled">Strategy Enabled</option>
					<option value="kill_switch_enabled">Kill Switch</option>
				</select>
			</div>
		</div>

		<AuditLogList client:load />
	</div>
</LayoutSidebar>




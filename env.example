# ============================================
# CLAWFI ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ============================================
# MASTER KEY (REQUIRED)
# ============================================
# Generate with: openssl rand -hex 32
# This key encrypts all secrets in the database
# BACK THIS UP SECURELY - losing it means losing access to encrypted data
CLAWFI_MASTER_KEY=your-32-byte-hex-key-here

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://clawfi:clawfi@localhost:5432/clawfi?schema=public

# ============================================
# REDIS
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# NODE SERVER
# ============================================
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# JWT secret for auth tokens (generate with: openssl rand -hex 32)
JWT_SECRET=your-jwt-secret-here

# Session duration in seconds (default: 7 days)
JWT_EXPIRES_IN=604800

# ============================================
# DASHBOARD
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# ============================================
# BINANCE (OPTIONAL)
# ============================================
# These are stored encrypted in DB via the UI
# Only set here for development/testing
# BINANCE_API_KEY=your-api-key
# BINANCE_API_SECRET=your-api-secret
# Use testnet by default for safety
BINANCE_TESTNET=true

# ============================================
# EVM RPC (OPTIONAL)
# ============================================
# Public RPC URLs (consider using your own for production)
ETH_RPC_URL=https://eth.llamarpc.com
ARB_RPC_URL=https://arb1.arbitrum.io/rpc
BASE_RPC_URL=https://mainnet.base.org

# ============================================
# CLANKER CONNECTOR (OPTIONAL) - Base
# ============================================
# Enable Clanker launchpad indexing on Base
CLANKER_ENABLED=true

# Factory addresses to watch (comma-separated)
# Get current addresses from Clanker documentation
# CLANKER_FACTORY_ADDRESSES=0x...

# Polling configuration
CLANKER_POLL_INTERVAL_MS=10000      # Poll every 10 seconds
CLANKER_MAX_BLOCKS_PER_SCAN=100     # Max blocks per scan
CLANKER_RATE_LIMIT=5                 # RPC requests per second

# Custom event topics (comma-separated topic0 hashes)
# CLANKER_EVENT_TOPICS=0x...

# ============================================
# PUMP.FUN CONNECTOR (OPTIONAL) - Solana
# ============================================
# Enable Pump.fun launchpad indexing on Solana
PUMPFUN_ENABLED=true

# Polling configuration
PUMPFUN_POLL_INTERVAL_MS=15000      # Poll every 15 seconds

# Only track tokens that graduated to Raydium
PUMPFUN_GRADUATION_ONLY=false

# ============================================
# FOUR.MEME CONNECTOR (OPTIONAL) - BSC
# ============================================
# Enable Four.meme launchpad indexing on BNB Smart Chain
FOURMEME_ENABLED=true

# Polling configuration
FOURMEME_POLL_INTERVAL_MS=15000     # Poll every 15 seconds

# Minimum market cap filter (USD)
FOURMEME_MIN_MARKET_CAP=0

# ============================================
# NOTIFICATIONS (OPTIONAL)
# ============================================

# ----------------
# Telegram
# ----------------
# Create a bot via @BotFather on Telegram
# TELEGRAM_BOT_TOKEN=your-bot-token

# Chat ID to send notifications to
# Get by messaging @userinfobot or adding bot to channel
# TELEGRAM_CHAT_ID=your-chat-id

# Enable/disable Telegram notifications
TELEGRAM_ENABLED=true

# ----------------
# Discord
# ----------------
# Create a webhook in Discord channel settings
# Server Settings > Integrations > Webhooks > New Webhook
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Custom bot name in Discord (default: ClawFi)
# DISCORD_USERNAME=ClawFi

# Enable/disable Discord notifications
DISCORD_ENABLED=true

# ============================================
# INTELLIGENCE JOBS (v0.1.1)
# ============================================
# Enable intelligence analysis (coverage, distribution, liquidity)
INTELLIGENCE_ENABLED=true

# Shared rate limit for intelligence RPC calls
INTELLIGENCE_RATE_LIMIT=3              # RPC requests per second

# Launch Coverage Verification
COVERAGE_WINDOW_HOURS=24               # Coverage analysis window

# Early Distribution Analysis
DISTRIBUTION_WINDOW_MINUTES=60         # Analyze tokens launched within
DISTRIBUTION_TOP10_THRESHOLD=40        # Signal if top 10 >= this %
DISTRIBUTION_CREATOR_THRESHOLD=15      # Signal if creator >= this %

# Liquidity Risk Detection
LIQUIDITY_MONITOR_HOURS=24             # Monitor tokens launched within
LIQUIDITY_DROP_THRESHOLD=50            # Signal if liquidity drops >= this %

# ============================================
# PRICE ALERTS (v0.2.1)
# ============================================
# Enable price monitoring for watched tokens
PRICE_ALERTS_ENABLED=true

# Check interval in milliseconds
PRICE_ALERTS_INTERVAL_MS=60000            # 1 minute

# Minimum price change to trigger alert (percentage)
PRICE_ALERTS_THRESHOLD=10                 # 10% change

# Lookback period for price comparison (minutes)
PRICE_ALERTS_LOOKBACK_MINUTES=60          # Compare vs 1 hour ago

# ============================================
# CLAWF AI AGENT
# ============================================
# API key for Clawf AI (OpenAI-powered)
# Used for token analysis, signal rating, and trading advice
OPENAI_API_KEY=sk-your-openai-api-key-here

# Model configuration
OPENAI_MODEL=gpt-4o-mini

# ============================================
# DEVELOPMENT
# ============================================
# Enable dev-only endpoints like /dev/simulate-event
DEV_MODE=true

